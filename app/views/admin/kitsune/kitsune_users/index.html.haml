#kitsune_record_header
  %h2.legend Users
  #menu= link_to "New user", :controller => 'admin/kitsune/kitsune_users', :action => :new

%table
  %thead
    %tr
      %th Email
      %th Actions
  %tbody
    - @users.each do |user|
      %tr{:class=>cycle('odd', 'even')}
        %td= user.email
        %td
          = link_to 'Edit', "#"
          \-
          = link_to 'Delete', '#'
- if defined? will_paginate
  = will_paginate @users
