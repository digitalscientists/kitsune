|
<%= link_to "New #{@model}", url_for(:action => 'new', :model => @model.to_s) %>
<table>
	<thead>
		<tr>
			<% @model.columns.each do |column| %>
				<% unless column.primary %>
					<th><%= column.name %></th>
				<% end %>
			<% end %>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @records.each do |record| %>
			<tr>
				<% @model.columns.each do |column| %>
					<% unless column.primary %>
						<td><%= record.send(column.name) %></td>
					<% end %>
				<% end %>
				<td>
					<%= link_to 'Edit', :action => 'edit', :model => @model.to_s, :id => record.id %> 
					- 
					<%= link_to 'Delete', {:action => 'destroy', :model => @model.to_s, :id => record.id}, :method => :delete, :confirm => "Are you sure?" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>